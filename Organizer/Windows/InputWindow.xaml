<Window x:Class="Organizer.Windows.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Name="inputWindow" Title="Input" Height="130" Width="350" ResizeMode="NoResize" Loaded="inputWindow_Loaded" WindowStartupLocation="CenterScreen" BorderBrush="#FFE95378" Background="#FF1C1E26">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="5,5,0,0" Text="Prompt: " TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White"/>
        <TextBox x:Name="textBox" Margin="5,0,5,0" Text="" TextWrapping="Wrap" VerticalAlignment="Center" Background="#FF1C1E26" Foreground="White" HorizontalAlignment="Stretch" KeyDown="textBox_KeyDown"/>
        <Button x:Name="okButton" Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,50,5"  Background="#FF1C1E26" Foreground="#FFE95378" Click="okButton_Click"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,5,5"  Background="#FF1C1E26" Foreground="#FFE95378" Click="cancelButton_Click"/>
    </Grid>
</Window>
